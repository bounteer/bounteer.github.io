---
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
import { Sidebar } from "@/components/interactive/Sidebar";
import AuthGuard from "@/components/interactive/AuthGuard";
---

<Layout title="Dashboard - Bounteer">
  <AuthGuard client:load>
    <main class="bg-gray-50 min-h-screen flex flex-col lg:flex-row">
      <!-- Sidebar handles both mobile topbar + desktop sidebar -->
      <Sidebar client:load />

      <!-- Main content -->
      <section class="flex-1 px-6 py-10">
        <div class="mb-6">
          <h1 class="text-2xl font-semibold tracking-tight">Dashboard</h1>
          <p class="text-sm text-muted-foreground">
            Access your tools and services below.
          </p>
        </div>

        <!-- Service Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Role Fit Index Card -->
          <a href="/dashboard/role-fit-index" class="group">
            <div
              class="bg-white rounded-lg shadow-sm border p-6 hover:shadow-md transition-shadow duration-200"
            >
              <div class="flex items-center mb-4">
                <div class="bg-primary-100 p-2 rounded-lg">
                  <svg
                    class="h-6 w-6 text-primary-600"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 ml-3">
                  Bounteer Role Fit Index
                </h3>
              </div>
              <p class="text-gray-600 mb-4">
                Analyze how well candidates match job requirements with
                AI-powered insights.
              </p>
              <div
                class="flex items-center text-primary-600 text-sm font-medium group-hover:text-primary-700"
              >
                Access Tool
                <svg
                  class="ml-1 h-4 w-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <!-- Bounteer Marketplace Card -->
          <div class="group opacity-75 cursor-not-allowed">
            <div class="bg-white rounded-lg shadow-sm border p-6">
              <div class="flex items-center mb-4">
                <div class="bg-gray-100 p-2 rounded-lg">
                  <svg
                    class="h-6 w-6 text-gray-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 ml-3">
                  Bounteer Marketplace
                </h3>
              </div>
              <p class="text-gray-600 mb-4">
                Connect with top talent and discover referral opportunities.
              </p>
              <div class="flex items-center text-gray-400 text-sm font-medium">
                <span
                  class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs font-medium mr-2"
                  >Coming Soon in 2026</span
                >
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </AuthGuard>
</Layout>
