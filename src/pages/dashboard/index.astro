---
import Layout from "@/layouts/Layout.astro";
import { Sidebar } from "@/components/interactive/Sidebar";
import AuthGuard from "@/components/interactive/AuthGuard";

const services = [
  {
    id: "role-fit-index",
    title: "Bounteer Role Fit Index",
    description:
      "Analyze how well candidates match job requirements with AI-powered insights.",
    href: "/dashboard/role-fit-index",
    status: "active",
    icon: "chart",
  },
  {
    id: "orbit-call",
    title: "Bounteer Orbit Call",
    description:
      "Interactive video calls with real-time job description analysis and feedback.",
    href: "/dashboard/orbit-call",
    status: "active",
    icon: "video",
  },
  {
    id: "marketplace",
    title: "Bounteer Marketplace",
    description: "Connect with top talent and discover referral opportunities.",
    href: "#",
    status: "coming-soon",
    comingSoonText: "Coming Soon in 2026",
    icon: "shopping",
  },
];
---

<Layout
  name="Bounteer"
  title="Dashboard - Bounteer"
  description="Access your Bounteer tools and services from your personal dashboard."
  url="https://bounteer.com/dashboard"
  image_url="https://bounteer.com/og.png"
>
  <AuthGuard client:load>
    <main class="bg-gray-50 min-h-screen flex flex-col lg:flex-row">
      <!-- Sidebar handles both mobile topbar + desktop sidebar -->
      <Sidebar client:load />

      <!-- Main content -->
      <section class="flex-1 px-6 py-10">
        <div class="mb-6">
          <h1 class="text-2xl font-semibold tracking-tight">Dashboard</h1>
          <p class="text-sm text-muted-foreground">
            Access your tools and services below.
          </p>
        </div>

        <!-- Service Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {services.map((service) => {
            const isComingSoon = service.status === "coming-soon";
            const isActive = service.status === "active";
            
            const iconPaths = {
              chart: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
              video: "M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z",
              shopping: "M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
            };

            return (
              isActive ? (
                <a href={service.href} class="group">
                  <div class="bg-white rounded-4xl shadow-sm border p-6 hover:shadow-md transition-shadow duration-200">
                    <div class="flex items-center mb-4">
                      <div class="bg-primary-100 p-2 rounded-lg">
                        <svg
                          class="h-6 w-6 text-primary-600"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d={iconPaths[service.icon]}
                          ></path>
                        </svg>
                      </div>
                      <h3 class="text-lg font-semibold text-gray-900 ml-3">
                        {service.title}
                      </h3>
                    </div>
                    <p class="text-gray-600 mb-4">
                      {service.description}
                    </p>
                    <div class="flex items-center text-primary-600 text-sm font-medium group-hover:text-primary-700">
                      Access Tool
                      <svg
                        class="ml-1 h-4 w-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 5l7 7-7 7"
                        ></path>
                      </svg>
                    </div>
                  </div>
                </a>
              ) : (
                <div class="group opacity-75 cursor-not-allowed">
                  <div class="bg-white rounded-4xl shadow-sm border p-6">
                    <div class="flex items-center mb-4">
                      <div class="bg-gray-100 p-2 rounded-lg">
                        <svg
                          class="h-6 w-6 text-gray-400"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d={iconPaths[service.icon]}
                          ></path>
                        </svg>
                      </div>
                      <h3 class="text-lg font-semibold text-gray-900 ml-3">
                        {service.title}
                      </h3>
                    </div>
                    <p class="text-gray-600 mb-4">
                      {service.description}
                    </p>
                    <div class="flex items-center text-gray-400 text-sm font-medium">
                      {service.comingSoonText && (
                        <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs font-medium mr-2">
                          {service.comingSoonText}
                        </span>
                      )}
                    </div>
                  </div>
                </div>
              )
            );
          })}
        </div>
      </section>
    </main>
  </AuthGuard>
</Layout>
