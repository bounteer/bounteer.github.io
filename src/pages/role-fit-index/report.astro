---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ReportCard from "@/components/interactive/ReportCard";
---

<Layout title="Role Fit Index Report - Bounteer">
  <Header />
  <main class="py-16 bg-gray-50">
    <div class="container-custom max-w-8xl mx-auto px-4 pb-8">
      <ReportCard client:only="react" />
      <div class="text-center mt-8 space-x-6">
        <a
          href="/role-fit-index"
          class="text-primary-600 underline hover:text-primary-800"
        >
          &larr; New analysis
        </a>
        <a
          href="/dashboard/role-fit-index"
          class="text-primary-600 underline hover:text-primary-800"
        >
          View all reports &rarr;
        </a>
      </div>
    </div>
    <Footer />
  </main>
</Layout>
