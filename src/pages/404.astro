---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Page Not Found - Bounteer">
  <Header />
  <main>
    <section class="py-20 md:py-32">
      <div
        class="container-custom flex flex-col md:flex-row items-center md:items-start md:gap-12"
      >
        <!-- Image -->
        <div
          class="flex-shrink-0 w-full md:w-1/2 flex justify-center mb-8 md:mb-0"
        >
          <img src="/404.png" class="max-w-[50%] md:max-w-[50%] h-auto" />
        </div>

        <!-- Text -->
        <div class="w-full md:w-1/2 text-center md:text-left">
          <h1 class="text-6xl font-bold text-secondary-600 mb-8">
            Page Not Found
          </h1>
          <h2 class="text-xl md:text-4xl font-bold text-gray-900 mb-4">
            We could not find what you were looking for
          </h2>
          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto md:mx-0">
            The page you are looking for might have been changed or removed.
          </p>
          <div class="flex justify-center md:justify-start gap-4 flex-wrap">
            <a href="/contact" class="btn-secondary"> Contact Support </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
