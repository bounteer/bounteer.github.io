---
import Layout from "@/layouts/Layout.astro";
import CompanyOrbitCallEnrichment from "@/components/interactive/CompanyOrbitCallEnrichment";
import AuthGuard from "@/components/interactive/AuthGuard";
---

<Layout title="Company Orbit Call - Job Description Enrichment">
  <AuthGuard client:load>
    <main class="bg-gray-50 min-h-screen">
      <!-- Main content without sidebar -->
      <section class="px-6 py-10">
        <!-- Page Header -->
        <div class="mb-6">
          <h1 class="text-2xl font-semibold tracking-tight mb-2">
            Company Orbit Call
          </h1>
          <p class="text-sm text-muted-foreground">
            AI-powered job description enrichment and candidate search.
          </p>
        </div>

        <!-- React Island that will parse session ID client-side -->
        <CompanyOrbitCallEnrichment client:load />
      </section>
    </main>
  </AuthGuard>
</Layout>