---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Bounteer Orbit - AI-Powered Candidate Matching">
  <Header />
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="container mx-auto px-4 py-8">
      <!-- Page Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          <span class="text-blue-600">Bounteer</span> Orbit
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Upload your job description and discover perfectly matched candidates from LinkedIn using AI-powered matching
        </p>
      </div>

      <!-- Main Content Grid -->
      <div class="grid lg:grid-cols-2 gap-8 max-w-7xl mx-auto">
        
        <!-- Left Side - Job Description Upload -->
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="flex items-center mb-6">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-semibold text-gray-900">Job Description</h2>
          </div>

          <!-- Upload Area -->
          <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center mb-6 hover:border-blue-400 transition-colors cursor-pointer">
            <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <p class="text-lg font-medium text-gray-700 mb-2">Drop your job description here</p>
            <p class="text-sm text-gray-500 mb-4">or click to browse files</p>
            <button class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
              Choose File
            </button>
          </div>

          <!-- Text Area Alternative -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Or paste job description text:
            </label>
            <textarea 
              class="w-full h-40 p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
              placeholder="Paste your job description here...&#10;&#10;Example:&#10;We are looking for a Senior Software Engineer with 5+ years of experience in React, Node.js, and cloud technologies. The ideal candidate should have experience with microservices architecture..."
            ></textarea>
          </div>

          <!-- Analysis Button -->
          <button class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-3 px-6 rounded-lg font-semibold hover:from-blue-700 hover:to-indigo-700 transition-all transform hover:scale-105 shadow-lg">
            <span class="flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Find Matching Candidates
            </span>
          </button>

          <!-- Processing Status -->
          <div class="mt-4 p-4 bg-blue-50 rounded-lg hidden" id="processing-status">
            <div class="flex items-center">
              <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-blue-600 mr-3"></div>
              <span class="text-blue-800">Analyzing job requirements and searching LinkedIn...</span>
            </div>
          </div>
        </div>

        <!-- Right Side - Candidate Results -->
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="flex items-center mb-6">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-semibold text-gray-900">Matched Candidates</h2>
          </div>

          <!-- Empty State -->
          <div class="text-center py-12" id="empty-state">
            <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-700 mb-2">No candidates yet</h3>
            <p class="text-gray-500">Upload a job description to see matching LinkedIn profiles</p>
          </div>

          <!-- Sample Candidate Cards (Hidden by default) -->
          <div class="space-y-4 hidden" id="candidate-results">
            <!-- Candidate Card 1 -->
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
              <div class="flex items-start space-x-4">
                <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&auto=format&fit=facearea&facepad=2&w=48&h=48&q=80" 
                     alt="Profile" class="w-12 h-12 rounded-full">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <h4 class="text-lg font-semibold text-gray-900">John Anderson</h4>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      95% Match
                    </span>
                  </div>
                  <p class="text-sm text-gray-600">Senior Software Engineer at Google</p>
                  <p class="text-sm text-gray-500 mt-1">San Francisco, CA • 8 years experience</p>
                  
                  <!-- Skills -->
                  <div class="flex flex-wrap gap-1 mt-2">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">React</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">Node.js</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">AWS</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-gray-100 text-gray-800">+5 more</span>
                  </div>
                  
                  <div class="flex items-center justify-between mt-3">
                    <a href="#" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View LinkedIn Profile</a>
                    <button class="bg-blue-600 text-white px-4 py-1 rounded text-sm hover:bg-blue-700 transition-colors">
                      Contact
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Candidate Card 2 -->
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
              <div class="flex items-start space-x-4">
                <img src="https://images.unsplash.com/photo-1494790108755-2616b612c969?ixlib=rb-1.2.1&auto=format&fit=facearea&facepad=2&w=48&h=48&q=80" 
                     alt="Profile" class="w-12 h-12 rounded-full">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <h4 class="text-lg font-semibold text-gray-900">Sarah Chen</h4>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      92% Match
                    </span>
                  </div>
                  <p class="text-sm text-gray-600">Full Stack Developer at Microsoft</p>
                  <p class="text-sm text-gray-500 mt-1">Seattle, WA • 6 years experience</p>
                  
                  <!-- Skills -->
                  <div class="flex flex-wrap gap-1 mt-2">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">TypeScript</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">React</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">Azure</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-gray-100 text-gray-800">+7 more</span>
                  </div>
                  
                  <div class="flex items-center justify-between mt-3">
                    <a href="#" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View LinkedIn Profile</a>
                    <button class="bg-blue-600 text-white px-4 py-1 rounded text-sm hover:bg-blue-700 transition-colors">
                      Contact
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Candidate Card 3 -->
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
              <div class="flex items-start space-x-4">
                <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-1.2.1&auto=format&fit=facearea&facepad=2&w=48&h=48&q=80" 
                     alt="Profile" class="w-12 h-12 rounded-full">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <h4 class="text-lg font-semibold text-gray-900">Mike Rodriguez</h4>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      87% Match
                    </span>
                  </div>
                  <p class="text-sm text-gray-600">Lead Developer at Airbnb</p>
                  <p class="text-sm text-gray-500 mt-1">Austin, TX • 7 years experience</p>
                  
                  <!-- Skills -->
                  <div class="flex flex-wrap gap-1 mt-2">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">JavaScript</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">Python</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-blue-100 text-blue-800">Docker</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-gray-100 text-gray-800">+4 more</span>
                  </div>
                  
                  <div class="flex items-center justify-between mt-3">
                    <a href="#" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View LinkedIn Profile</a>
                    <button class="bg-blue-600 text-white px-4 py-1 rounded text-sm hover:bg-blue-700 transition-colors">
                      Contact
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Load More Button -->
            <div class="text-center pt-4">
              <button class="bg-gray-100 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-200 transition-colors">
                Load More Candidates
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Features Section -->
      <div class="mt-12 bg-white rounded-xl shadow-lg p-8">
        <h3 class="text-2xl font-bold text-center text-gray-900 mb-8">How Bounteer Orbit Works</h3>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-semibold text-gray-900 mb-2">Upload Job Description</h4>
            <p class="text-gray-600">Simply upload your job description or paste the text to get started.</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-semibold text-gray-900 mb-2">AI-Powered Analysis</h4>
            <p class="text-gray-600">Our AI analyzes requirements and searches LinkedIn for perfect matches.</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-semibold text-gray-900 mb-2">Connect with Candidates</h4>
            <p class="text-gray-600">Review match scores and connect directly with the best candidates.</p>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />

  <script>
    // Demo functionality for the mockup
    document.addEventListener('DOMContentLoaded', function() {
      const findButton = document.querySelector('button[class*="bg-gradient-to-r"]');
      const processingStatus = document.getElementById('processing-status');
      const emptyState = document.getElementById('empty-state');
      const candidateResults = document.getElementById('candidate-results');
      
      if (findButton && processingStatus && emptyState && candidateResults) {
        findButton.addEventListener('click', function() {
          // Show processing state
          processingStatus.classList.remove('hidden');
          emptyState.classList.add('hidden');
          
          // Simulate API call delay
          setTimeout(function() {
            processingStatus.classList.add('hidden');
            candidateResults.classList.remove('hidden');
          }, 3000);
        });
      }
    });
  </script>
</Layout>