---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import { UITestDashboard } from "../components/interactive/UITestDashboard.tsx";
---

<Layout title="UI Testing - Bounteer">
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">UI Component Testing</h1>
        <p class="text-gray-600">Reference page for testing and showcasing UI components</p>
      </div>
      <UITestDashboard client:load />
    </div>
  </main>
  <Footer />
</Layout>