---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import HeroSection from "../components/HeroSection.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Talent Pool - Bounteer">
  <Header />
  <main>
    <HeroSection
      title="Join the Bounteer Talent Pool"
      highlightText="Talent Pool"
      description="An opt-in, curated, high-match candidate directory where job seekers who score highly on RFI can showcase themselves and recruiters can browse & hire."
    />

    <!-- Main Content Section -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <!-- What is the Talent Pool -->
          <div class="mb-16">
            <h2 class="text-3xl md:text-4xl text-gray-900 mb-6">
              What is the Talent Pool?
            </h2>
            <p class="text-lg text-gray-700 mb-6">
              The Bounteer Talent Pool is an exclusive directory of
              high-performing candidates who have demonstrated exceptional
              skills through their Role Fit Index (RFI) scores. By opting in,
              you gain visibility to top recruiters and hiring managers looking
              for talent that matches your expertise.
            </p>
          </div>

          <!-- How it Works -->
          <div class="mb-16">
            <h2 class="text-3xl md:text-4xl text-gray-900 mb-8">
              How It Works
            </h2>
            <div class="grid md:grid-cols-3 gap-8">
              <div class="text-center">
                <div
                  class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                  <svg
                    class="w-8 h-8 text-primary-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">
                  Score High on RFI
                </h3>
                <p class="text-gray-600">
                  Complete your Role Fit Index assessment and achieve 80+ to
                  demonstrate your skills and compatibility.
                </p>
              </div>
              <div class="text-center">
                <div
                  class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                  <svg
                    class="w-8 h-8 text-primary-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">
                  Opt-in to the Pool
                </h3>
                <p class="text-gray-600">
                  Choose to make your profile visible in our curated talent
                  directory for recruiters to discover.
                </p>
              </div>
              <div class="text-center">
                <div
                  class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
                >
                  <svg
                    class="w-8 h-8 text-primary-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">
                  Get Discovered
                </h3>
                <p class="text-gray-600">
                  Recruiters browse the talent pool to find candidates that
                  match their requirements and reach out directly.
                </p>
              </div>
            </div>
          </div>

          <!-- Benefits -->
          <div class="mb-16">
            <h2 class="text-3xl md:text-4xl text-gray-900 mb-8">
              Benefits for Candidates
            </h2>
            <div class="grid md:grid-cols-2 gap-8">
              <div class="flex items-start space-x-4">
                <div
                  class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mt-1"
                >
                  <svg
                    class="w-5 h-5 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    Increased Visibility
                  </h3>
                  <p class="text-gray-600">
                    Get discovered by recruiters actively seeking candidates
                    with your specific skills and expertise.
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div
                  class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mt-1"
                >
                  <svg
                    class="w-5 h-5 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    Quality Matches
                  </h3>
                  <p class="text-gray-600">
                    Connect with roles that align with your skills, as validated
                    by your RFI score.
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div
                  class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mt-1"
                >
                  <svg
                    class="w-5 h-5 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    Passive Job Search
                  </h3>
                  <p class="text-gray-600">
                    Let opportunities come to you while maintaining your current
                    position.
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div
                  class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mt-1"
                >
                  <svg
                    class="w-5 h-5 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    Verified Skills
                  </h3>
                  <p class="text-gray-600">
                    Your RFI score serves as proof of your capabilities to
                    potential employers.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- How Recruiters Use It -->
          <div class="mb-16">
            <h2 class="text-3xl md:text-4xl text-gray-900 mb-8">
              How Recruiters Use the Talent Pool
            </h2>
            <div class="bg-gray-50 rounded-lg p-8">
              <p class="text-lg text-gray-700 mb-6">
                Recruiters and hiring managers access the Talent Pool to find
                pre-screened candidates who have already demonstrated their fit
                for specific roles through their RFI assessments.
              </p>
              <ul class="space-y-4 text-gray-700">
                <li class="flex items-start space-x-3">
                  <svg
                    class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4"></path>
                  </svg>
                  <span
                    >Browse candidates by skills, experience level, and RFI
                    scores</span
                  >
                </li>
                <li class="flex items-start space-x-3">
                  <svg
                    class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4"></path>
                  </svg>
                  <span
                    >Filter candidates based on specific role requirements</span
                  >
                </li>
                <li class="flex items-start space-x-3">
                  <svg
                    class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4"></path>
                  </svg>
                  <span
                    >Contact candidates directly for relevant opportunities</span
                  >
                </li>
                <li class="flex items-start space-x-3">
                  <svg
                    class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4"></path>
                  </svg>
                  <span
                    >Access detailed RFI reports to understand candidate fit</span
                  >
                </li>
              </ul>
            </div>
          </div>

          <!-- CTA Section -->
          <div
            class="text-center bg-gradient-to-r from-primary-600 to-primary-700 rounded-lg p-8 text-white"
          >
            <h2 class="text-3xl md:text-4xl mb-4">
              Ready to Join the Bounteer Talent Pool?
            </h2>
            <p class="text-xl mb-8 text-primary-100">
              Take your Role Fit Index assessment and opt-in to get discovered
              by top recruiters.
            </p>
            <div
              class="space-y-4 sm:space-y-0 sm:space-x-4 sm:flex sm:justify-center"
            >
              <a
                href="/role-fit-index"
                class="inline-block bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
              >
                Take RFI Assessment
              </a>
              <a
                href="/dashboard"
                class="inline-block bg-primary-800 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-900 transition-colors"
              >
                Access Dashboard
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
