---
import { Image } from "astro:assets";
import Icon from "../assets/icon.png";
import { EXTERNAL, KEYWORDS } from "@/constant";
import UserMenu from "@/components/interactive/UserMenu";

const productsForRecruiters = [
  { text: "Orbit Signal", url: "/orbit-signal" },
  { text: "Orbit Call", url: "/orbit-call" },
  { text: "Orbit Pulse", url: "/orbit-pulse" },
];

const productsForCandidates = [
  { text: "Role Fit Index", url: "/role-fit-index" },
  { text: "Role Fit Studio", url: "/role-fit-studio" },
];
---

<header
  class="hidden lg:block fixed top-4 left-1/2 -translate-x-1/2 z-50 w-full"
>
  <div class="mx-auto w-[calc(100vw-2rem)] max-w-7xl relative">
    <!-- TOP BAR -->
    <div
      id="topbar-desktop"
      class="h-16 px-6
        flex items-center justify-between gap-8
        rounded-2xl
        bg-white/70 backdrop-blur-lg
        border border-black/10
        shadow-xl
        text-black"
    >
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center gap-2 hover:opacity-80 transition-opacity shrink-0"
      >
        <Image src={Icon} alt="Logo" class="h-8 w-auto" loading="eager" />
        <span class="text-lg font-semibold">
          {KEYWORDS.name}
        </span>
      </a>

      <!-- Navigation -->
      <nav
        class="flex items-center gap-6 text-sm text-black/70 flex-1 justify-center"
      >
        <button
          id="products-btn-desktop"
          class="hover:text-black transition-colors"
        >
          Products
        </button>
        <a href="/contact" class="hover:text-black transition-colors">Contact</a
        >
      </nav>

      <!-- Right Actions -->
      <div class="flex items-center gap-3 shrink-0">
        <div id="auth-section-desktop">
          <UserMenu
            client:load
            directusUrl={EXTERNAL.directus_url}
            provider={EXTERNAL.auth_idp_key}
          />
        </div>
        <a
          href="/contact"
          class="px-4 py-2 rounded-lg bg-orange-500 hover:bg-orange-400 text-white text-sm font-medium transition-colors"
        >
          Book Demo
        </a>
      </div>
    </div>

    <!-- DROPDOWN PANEL -->
    <div
      id="dropdown-desktop"
      class="absolute left-0 right-0 mt-2
        rounded-2xl
        bg-white/95
        border border-black/10
        shadow-xl
        px-6 py-6
        text-black
        opacity-0 pointer-events-none
        transition-opacity duration-200 ease-out"
      style="backdrop-filter: blur(100px);"
    >
      <div class="grid grid-cols-2 gap-8">
        <!-- For Recruiters -->
        <div>
          <div class="text-xs font-semibold text-black/50 uppercase tracking-wide mb-3">
            For Recruiters
          </div>
          <div class="space-y-2">
            {
              productsForRecruiters.map((p) => (
                <a
                  href={p.url}
                  class="block text-base text-black/70 hover:text-black transition-colors"
                >
                  {p.text}
                </a>
              ))
            }
          </div>
        </div>

        <!-- For Candidates -->
        <div>
          <div class="text-xs font-semibold text-black/50 uppercase tracking-wide mb-3">
            For Candidates
          </div>
          <div class="space-y-2">
            {
              productsForCandidates.map((p) => (
                <a
                  href={p.url}
                  class="block text-base text-black/70 hover:text-black transition-colors"
                >
                  {p.text}
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  function initHeaderDesktop() {
    const btn = document.getElementById("products-btn-desktop");
    const dropdown = document.getElementById("dropdown-desktop");

    if (!btn || !dropdown) return;

    // Remove any existing listeners by cloning (prevents duplicates)
    const newBtn = btn.cloneNode(true) as HTMLElement;
    btn.parentNode?.replaceChild(newBtn, btn);

    // Ensure dropdown is available in closure
    const dropdownEl = dropdown;

    function open() {
      dropdownEl.classList.remove("opacity-0", "pointer-events-none");
    }

    function close() {
      dropdownEl.classList.add("opacity-0", "pointer-events-none");
    }

    newBtn.addEventListener("click", (e) => {
      e.stopPropagation();
      e.preventDefault();
      if (dropdownEl.classList.contains("opacity-0")) {
        open();
      } else {
        close();
      }
    });

    // Use a named function so we can remove it later if needed
    const handleClickOutside = (e: Event) => {
      const target = e.target as Node;
      if (!dropdownEl.contains(target) && !newBtn.contains(target)) {
        close();
      }
    };

    const handleEscape = (e: KeyboardEvent) => {
      if (e.key === "Escape") close();
    };

    document.addEventListener("click", handleClickOutside);
    document.addEventListener("keydown", handleEscape);
  }

  // Initialize on page load
  document.addEventListener("astro:page-load", initHeaderDesktop);
</script>
