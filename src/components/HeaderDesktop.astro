---
import { Image } from "astro:assets";
import Icon from "../assets/icon.png";
import { EXTERNAL, KEYWORDS } from "@/constant";
import UserMenu from "@/components/interactive/UserMenu";
import ProductsNav from "@/components/interactive/ProductsNav";
---

<header class="hidden lg:block fixed top-0 left-0 right-0 z-50 w-full">
  <div class="mx-auto w-full max-w-7xl relative px-8 py-4">
    <!-- TOP BAR -->
    <div
      id="topbar-desktop"
      class="h-16 px-6
        flex items-center justify-between gap-8
        rounded-2xl
        bg-white/95 backdrop-blur-lg
        border border-black/10
        shadow-xl
        text-black"
    >
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center gap-2 hover:opacity-80 transition-opacity shrink-0"
      >
        <Image src={Icon} alt="Logo" class="h-8 w-auto" loading="eager" />
        <span class="text-lg font-semibold">
          {KEYWORDS.name}
        </span>
      </a>

      <!-- Navigation -->
      <nav
        class="flex items-center gap-6 text-sm text-black/70 flex-1 justify-center"
      >
        <ProductsNav client:load />
        <a href="/contact" class="hover:text-black transition-colors">Contact</a
        >
      </nav>

      <!-- Right Actions -->
      <div class="flex items-center gap-3 shrink-0">
        <div id="auth-section-desktop">
          <UserMenu
            client:load
            directusUrl={EXTERNAL.directus_url}
            provider={EXTERNAL.auth_idp_key}
          />
        </div>
        <a
          href="/contact"
          class="px-4 py-2 rounded-lg bg-primary-600 hover:bg-primary-500 text-white text-sm font-medium transition-colors"
        >
          Book Demo
        </a>
      </div>
    </div>
  </div>
</header>
