---
interface Props {
  title: string;
  highlightText?: string;
  description: string;
}

const { title, highlightText, description } = Astro.props;

// Split the title to insert the highlighted text if provided
let titleStart = title;
let titleEnd = "";

if (highlightText) {
  const titleParts = title.split(highlightText);
  if (titleParts.length > 1) {
    titleStart = titleParts[0];
    titleEnd = titleParts[1];
  }
}
---

<!-- Hero Section -->
<section class="relative overflow-hidden bg-gradient-to-b pt-20 md:pt-28">
  <div class="container-custom relative z-10">
    <div class="text-center max-w-3xl mx-auto px-4">
      <h1
        class="text-2xl lg:text-4xl mb-4 md:mb-6 text-gray-900 animate-slide-down"
      >
        {
          highlightText ? (
            <>
              {titleStart}
              <span class="text-primary-500">{highlightText}</span>
              {titleEnd}
            </>
          ) : (
            title
          )
        }
      </h1>
      <p
        class="text-lg md:text-xl text-gray-700 mb-6 md:mb-8 animate-slide-up"
        style="animation-delay: 200ms"
      >
        {description}
      </p>
    </div>
  </div>
</section>
