---
import { KEYWORDS } from "../constant";
import ContactForm from "./interactive/ContactForm";
---

<section id="contact" class="section bg-gray-50/50">
  <div class="container-custom">
    <div class="grid md:grid-cols-2 gap-12">
      <div class="slide-up">
        <span
          class="inline-block px-4 py-1 rounded-full bg-accent-100 text-accent-600 font-medium text-sm mb-4"
        >
          Get In Touch
        </span>
        <h2 class="mb-6 text-gray-900">We'd Love to Hear From You</h2>
        <p class="text-gray-600 mb-8">
          Let's get Bounteer onboarded into your team or need help getting
          started? Our team is here to assist you every step of the way.
        </p>

        <div class="space-y-6">
          <div class="flex items-start">
            <div class="shrink-0 mt-1">
              <svg
                class="w-6 h-6 text-secondary-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">Email Us</h3>
              <p class="text-gray-600">{KEYWORDS.email}</p>
            </div>
          </div>
        </div>
      </div>
      <ContactForm client:load />
    </div>
  </div>
</section>
