---
import { Image } from "astro:assets";
import BtFlatSquare from "../assets/bt_flat_square.png"; // adjust path
---

<section
  class="relative pt-32 pb-10 lg:pt-40 lg:pb-20 overflow-hidden hero-section bg-gray-50 antialiased"
>
  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- left: image location -->
      <div class="relative fade-" transition:animate="fade">
        <!-- Wrapper -->
        <div class="relative w-56 lg:w-80 mx-auto lg:ml-auto">
          <div
            class="relative aspect-square w-full flex items-center justify-center"
          >
            <!-- Orange circle -->
            <div
              class="absolute inset-0 rounded-full
               bg-gradient-to-br from-amber-300 via-orange-400 to-amber-500
               shadow-2xl"
            >
            </div>

            <!-- Avatar -->
            <Image
              src={BtFlatSquare}
              alt="Bounteer avatar"
              loading="eager"
              widths={[64, 128, 256, 512]}
              class="relative rounded-full object-cover ring-8 ring-white shadow-xl"
            />
          </div>
        </div>
      </div>

      <!-- right: text location -->
      <div class="slide-up" transition:animate="slide">
        <h1
          class="mb-6 text-secondary-900 leading-[1.1] tracking-tight text-4xl sm:text-5xl lg:text-6xltext-balance"
        >
          <span class="text-accent-600">Disrupt</span>
          <br />Recruitment
        </h1>
        <p
          class="text-secondary-600 mb-8 max-w-xl text-xl lg:text-2xl leading-relaxed"
        >
