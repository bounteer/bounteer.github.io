<section id="comparison" class="section py-12 md:py-16">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-8 md:mb-16 px-4">
      <span
        class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4"
      >
        Comparison
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">How We Compare</h2>
      <p class="text-gray-600 dark:text-gray-300">
        See how our features stack up against the competition with our
        interactive comparison chart.
      </p>
    </div>

    <div class="comparison-table-container overflow-x-auto -mx-4 px-4 pb-4">
      <table class="comparison-table w-full border-collapse min-w-[640px]">
        <thead>
          <tr>
            <th
              class="p-3 md:p-4 text-left bg-secondary-100 dark:bg-secondary-800 text-gray-900 dark:text-white rounded-tl-lg"
              >Feature</th
            >
            <th
              class="p-3 md:p-4 text-center bg-secondary-100 dark:bg-secondary-800 text-gray-900 dark:text-white"
              >Manual</th
            >
            <th
              class="p-3 md:p-4 text-center bg-secondary-100 dark:bg-secondary-800 text-gray-900 dark:text-white"
              >Competitor A</th
            >
            <th
              class="p-3 md:p-4 text-center bg-secondary-100 dark:bg-secondary-800 text-gray-900 dark:text-white"
              >Competitor B</th
            >
            <th
              class="p-3 md:p-4 text-center bg-primary-100 dark:bg-primary-900/30 text-primary-900 dark:text-primary-100 font-bold rounded-tr-lg"
              >IsMail</th
            >
          </tr>
        </thead>
        <tbody>
          <tr class="feature-row">
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 font-medium"
              >Mailing List</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Self-prepared</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Self-prepared</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Available but not targeted</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center bg-primary-50 dark:bg-primary-900/10"
            >
              <span
                class="inline-flex items-center justify-center text-primary-600 dark:text-primary-400"
              >
                <svg
                  class="w-4 h-4 md:w-5 md:h-5 mr-1"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                10M+ available and targeted
              </span>
            </td>
          </tr>
          <tr class="feature-row">
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 font-medium"
              >Email Contents Automation</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Self-prepared</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Self-prepared</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Limited</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center bg-primary-50 dark:bg-primary-900/10"
            >
              <span
                class="inline-flex items-center justify-center text-primary-600 dark:text-primary-400"
              >
                <svg
                  class="w-5 h-5 mr-1"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Fully automated with QA
              </span>
            </td>
          </tr>
          <tr class="feature-row">
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 font-medium"
              >Analytics</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Self-prepared</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Basic</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Available</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center bg-primary-50 dark:bg-primary-900/10"
            >
              <span
                class="inline-flex items-center justify-center text-primary-600 dark:text-primary-400"
              >
                <svg
                  class="w-5 h-5 mr-1"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Available and Interactive
              </span>
            </td>
          </tr>
          <tr class="feature-row">
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 font-medium"
              >Cost</td
            >

            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
            >
              <svg
                class="w-5 h-5 mx-auto text-gray-400"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </td>
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Per Mail Sent (CPM)</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center"
              >Per Mail Sent (CPM)</td
            >
            <td
              class="p-3 md:p-4 border-b border-gray-200 dark:border-gray-700 text-center bg-primary-50 dark:bg-primary-900/10"
            >
              <span
                class="inline-flex items-center justify-center text-primary-600 dark:text-primary-400"
              >
                <svg
                  class="w-5 h-5 mr-1"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Per Sale (CPS, zero onboarding fee)
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>
