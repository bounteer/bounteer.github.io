import ProductCard from "../components/interactive/ProductCard.tsx";

const stages = [
  {
    title: "Orbit Signal",
    subtitle:
      "Curated company lists for outreach based on latest M&A news and market intelligence.",
    launchDate: "January 2025",
    currentStage: "In Development",
    tagColor: "bg-primary-100 text-primary-700",
    features: [
      "Real-time M&A news monitoring and company identification",
      "Curated lists of companies in transition or growth phases",
      "Key contact discovery with verified hiring manager details",
      "Market intelligence and hiring trend analysis",
      "Integration with Orbit Call for seamless outreach",
      "Custom list building based on industry and role criteria",
    ],
    buttonLabel: "Request a Demo",
    buttonHref: "/orbit-signal",
  },
  {
    title: "Orbit Call",
    subtitle:
      "AI-powered outreach calls to hiring managers with personalized scripts.",
    launchDate: "December 2025",
    currentStage: "Beta Release",
    tagColor: "bg-emerald-100 text-emerald-700",
    features: [
      "AI-generated personalized outreach scripts for hiring managers",
      "Automated call scheduling and execution",
      "Real-time call tracking and status updates",
      "Integration with company research and job postings",
      "Success rate analytics and optimization insights",
      "Professional call recordings and transcripts",
    ],
    buttonLabel: "Start Orbit Call",
    buttonHref: "/orbit-call",
  },
  {
    title: "Orbit Pulse",
    subtitle:
      "Track your talent pool's career movements and re-engage at the perfect moment.",
    launchDate: "February 2026",
    currentStage: "In Development",
    tagColor: "bg-primary-100 text-primary-700",
    features: [
      "Store and organize your talent pool profiles in one place",
      "Automated tracking of candidate career movements",
      "AI-generated summaries of profile changes and updates",
      "Instant notifications when candidates make career moves",
      "Eliminate guesswork with real-time intelligence",
      "Re-engage with candidates at the optimal timing",
    ],
    buttonLabel: "Learn More",
    buttonHref: "/orbit-pulse",
  },
  {
    title: "Role Fit Index",
    subtitle: "Instant, AI-powered JD to CV match analysis.",
    launchDate: "September 2025",
    currentStage: "Released",
    tagColor: "bg-emerald-100 text-emerald-700",
    features: [
      "Upload CV & paste a job description (multiple formats)",
      "Overall match score with confidence band",
      "Strengths & concern tags (skills, seniority, domain)",
      "Top gaps + concrete upgrade tips",
      "ATS-readiness checks (readability & keyword coverage)",
      "Shareable, privacy-first report link",
    ],
    buttonLabel: "Check Your Role Fit Index",
    buttonHref: "/role-fit-index",
  },
  {
    title: "Role Fit Studio",
    subtitle: "Incrementally improve your RFI with AI-powered CV optimization.",
    launchDate: "October 2025",
    currentStage: "Released",
    tagColor: "bg-emerald-100 text-emerald-700",
    features: [
      "AI-powered CV optimization based on RFI feedback",
      "Iterative improvements to boost your match scores",
      "Personalized recommendations for skill development",
      "Industry-specific keyword optimization",
      "ATS-friendly formatting suggestions",
      "Track improvement progress over time",
    ],
    buttonLabel: "Try Role Fit Studio",
    buttonHref: "/role-fit-studio",
  },
];
---

<section class="py-12">
  <div class="container-custom grid md:grid-cols-3 gap-6">
    {
      stages.map((stage) => (
        <ProductCard
          client:only="react"
          title={stage.title}
          subtitle={stage.subtitle}
          launchDate={stage.launchDate}
          currentStage={stage.currentStage}
          features={stage.features}
          buttonLabel={stage.buttonLabel}
          buttonHref={stage.buttonHref}
          tagColor={stage.tagColor}
        />
      ))
    }
  </div>
</section>
